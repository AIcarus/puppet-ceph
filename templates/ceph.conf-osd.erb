[osd.<%= @name %>]
   host = <%= @hostname %>
   devs = <%= @device %>
<% if @cluster_addr -%>
   cluster addr = <%= @cluster_addr %>
<% end -%>
<% if @public_addr -%>
   public addr = <%= @public_addr %>
<% end -%>
<% if @journal -%>
   osd journal = <%= @journal %>/journal   # we use parent folder to mount
<% end -%>
<% if @journalsize -%>
   osd journal size = <%= @journalsize %>
<% end -%>
<% @config.sort.each do |key, value| -%>
  <%= key %> = <%= value %>
<% end %>

